{
  "name": "ShareTransfer",
  "plural": "sharetransfers",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "forceId": false,
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "transferer_id": {
      "type": "number",
      "required": false
    },
    "transferer_type": {
      "type": "string",
      "required": false,
      "description": "Can be company/shareholder"
    },
    "transferee_id": {
      "type": "number",
      "required": true
    },
    "company_id": {
      "type": "number",
      "required": true
    },
    "number_of_shares": {
      "type": "number",
      "required": true
    },
    "par_value": {
      "type": "number",
      "required": true
    },
    "share_price": {
      "type": "number",
      "required": true,
      "mysql": {
        "columnName": "share_price",
        "dataType": "FLOAT"
      }
    },
    "payment_status": {
      "type": "string",
      "required": true
    },
    "share_type_id": {
      "type": "number",
      "required": true
    },
    "approved": {
      "type": "boolean",
      "required": false,
      "default": 0
    },
    "cash_payable": {
      "type": "number",
      "required": false,
      "default": 0,
      "mysql": {
        "columnName": "cash_payable",
        "dataType": "FLOAT"
      }
    },
    "non_cash_payable": {
      "type": "number",
      "required": false,
      "default": 0,
      "mysql": {
        "columnName": "non_cash_payable",
        "dataType": "FLOAT"
      }
    },
    "total_cash_amount": {
      "type": "number",
      "required": true,
      "default": 0,
      "mysql": {
        "columnName": "total_cash_amount",
        "dataType": "FLOAT"
      }
    },
    "total_non_cash_amount": {
      "type": "number",
      "required": true,
      "default": 0,
      "mysql": {
        "columnName": "total_non_cash_amount",
        "dataType": "FLOAT"
      }
    },
    "payment_type": {
      "type": "string"
    },
    "initiated_by": {
      "type": "number",
      "required": false
    },
    "approved_by": {
      "type": "number",
      "required": false
    },
    "dated": {
      "type": "date"
    },
    "share_certificate_no": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "transferer": {
      "type": "belongsTo",
      "model": "Shareholder",
      "foreignKey": "transferer_id"
    },
    "transferee": {
      "type": "belongsTo",
      "model": "Shareholder",
      "foreignKey": "transferee_id"
    },
    "sharetype": {
      "type": "belongsTo",
      "model": "ShareType",
      "foreignKey": "share_type_id"
    }
  },
  "acls": [],
  "methods": {}
}
